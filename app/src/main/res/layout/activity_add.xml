<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:text="添加"
        android:textColor="#bc4b86" />
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_scrollFlags="scroll|enterAlways|snap" />
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/t"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="时间：" />

            <EditText
                android:id="@+id/date1"
                android:inputType="text"
                android:layout_weight="5"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" />
            <Button
                android:id="@+id/timepicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center_horizontal"
                android:text="选择时间"
                android:layout_marginLeft="10dp"
                >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="航班号：" />

            <EditText
                android:id="@+id/flightId1"
                android:inputType="text"
                android:layout_width="150dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" />
            <Button
                android:id="@+id/scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center_horizontal"
                android:text="扫一扫"
                android:layout_marginLeft="10dp"
                >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="旅客姓名：" />

            <EditText
                android:id="@+id/name1"
                android:inputType="text"
                android:layout_width="150dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="物品品名：" />

            <EditText
                android:id="@+id/goods1"
                android:inputType="text"
                android:layout_width="150dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" />
            <Button
                android:id="@+id/yuyin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center_horizontal"
                android:text="语音输入"
                android:layout_marginLeft="10dp"
                >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="数量：" />

            <EditText
                android:id="@+id/amount1"
                android:inputType="text"
                android:layout_weight="5"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="方式：" />
            <RadioGroup
                android:id="@+id/radioGroupID"
                android:layout_width="wrap_content"
                android:layout_weight="5"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/zancunID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂存"
                    />
                <RadioButton
                    android:id="@+id/fangqiID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="放弃"/>
                <RadioButton
                    android:id="@+id/tuihuiID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退回"/>
                <RadioButton
                    android:id="@+id/tuoyunID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="托运"/>
                <RadioButton
                    android:id="@+id/yijiaoID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="移交"/>
                <RadioButton
                    android:id="@+id/xiedaiID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="携带"/>
                <RadioButton
                    android:id="@+id/xianliangID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="限量"/>
            </RadioGroup>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="开箱员：" />

            <EditText
                android:id="@+id/boxer1"
                android:inputType="text"
                android:layout_weight="5"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="开机员：" />

            <EditText
                android:id="@+id/starter1"
                android:inputType="text"
                android:layout_weight="5"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="备注：" />

            <EditText
                android:id="@+id/remark1"
                android:inputType="text"
                android:layout_weight="5"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/addnew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/add"
            >
        </Button>
    </LinearLayout>

</RelativeLayout>
</ScrollView>